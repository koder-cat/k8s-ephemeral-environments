# Demo App API Environment Variables
# Copy this to .env and adjust values as needed

# PostgreSQL (required)
DATABASE_URL=postgres://app:secret@localhost:5432/app

# MongoDB - for audit logging (optional)
# Leave unset to disable audit features
MONGODB_URL=mongodb://app:secret@localhost:27017/app?authSource=admin

# Redis - for caching and rate limiting (optional)
# Leave unset to disable caching features
REDIS_URL=redis://localhost:6379

# MinIO - for file storage (optional)
# Leave unset to disable storage features
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=demo-app

# Application settings
LOG_LEVEL=debug
PORT=3000
