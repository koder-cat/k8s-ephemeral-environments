{
  "name": "@demo-app/api",
  "version": "1.0.0",
  "private": true,
  "description": "NestJS API for demo application",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "db:generate": "drizzle-kit generate --config=drizzle.postgresql.config.ts",
    "db:generate:mariadb": "drizzle-kit generate --config=drizzle.mariadb.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.postgresql.config.ts",
    "db:migrate:mariadb": "drizzle-kit migrate --config=drizzle.mariadb.config.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.postgresql.config.ts",
    "db:studio:mariadb": "drizzle-kit studio --config=drizzle.mariadb.config.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@nestjs/common": "^11.1.11",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/serve-static": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "drizzle-orm": "^0.45.0",
    "drizzle-seed": "^0.3.0",
    "file-type": "^21.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "mongodb": "^6.12.0",
    "multer": "^2.0.2",
    "nestjs-pino": "^4.2.0",
    "mysql2": "^3.11.0",
    "pg": "^8.13.0",
    "pino-http": "^10.3.0",
    "prom-client": "^15.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "^3.0.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0",
    "vitest": "^3.0.0"
  }
}
